{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir":"./dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noUnusedLocals": true
  },
  "exclude": [ "dist" ],
  "include": [ "src/**/*" ]
}